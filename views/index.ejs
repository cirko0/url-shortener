<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener Proxy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1>URL Shortener</h1>

      <form
        action="/shortUrls"
        method="POST"
        class="row my-4 align-items-center"
      >
        <div class="col">
          <input
            type="url"
            name="fullUrl"
            id="fullUrl"
            placeholder="Url"
            required
            class="form-control mr-2"
          />
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-success">Short</button>
        </div>
      </form>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Full URL</th>
              <th scope="col">Short URL</th>
              <th scope="col">Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => {%>
            <tr onclick="click(event)">
              <td>
                <a href="<%= shortUrl.full %>" target="_blank"
                  ><%= shortUrl.full %></a
                >
              </td>
              <td>
                <a href="<%= shortUrl.short  %>" target="_blank" id="short"
                  ><%= shortUrl.short %></a
                >
              </td>

              <td><%= shortUrl.clicks %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
